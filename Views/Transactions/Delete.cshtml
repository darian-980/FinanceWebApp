@model GroupProject.Models.Transaction

@{
    ViewData["Title"] = "Delete";
    var isAdmin = Context.Session.GetString("UserIsAdmin"); // Check if user is admin
}

<h1>Delete</h1>

@if (isAdmin == "True") // only displays if user is admin
{
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Transaction</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AmountChange)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AmountChange)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TransactionId" />
        <br />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <br />
        <br />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
}
else
{
<h2>Admin access only.</h2>
}

<div>
    <br></br>
    @await Html.PartialAsync("_Transaction", Model)
</div>